{
  "name": "cidr-to-regex",
  "version": "0.1.0",
  "description": "Convert IPv4/IPv6 CIDR blocks into regular expressions",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": ["dist", "src"],
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@10.30.2",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "pnpm run clean && tsc -p tsconfig.build.json",
    "bench": "pnpm run build && node scripts/benchmark.mjs",
    "lint": "pnpm run lint:biome && pnpm run typecheck",
    "lint:biome": "pnpm exec biome check .",
    "lint:fix": "pnpm exec biome check --write .",
    "format": "pnpm exec biome format --write .",
    "format:check": "pnpm exec biome format --check .",
    "check": "pnpm run lint && pnpm run test:run && pnpm run build",
    "test": "vitest",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit",
    "generate:fixtures": "python3 scripts/generate-fixtures.py",
    "generate:differential-fixtures": "python3 scripts/generate-differential-fixtures.py",
    "prepublishOnly": "pnpm run check"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^24.0.0",
    "typescript": "^5.9.0",
    "vitest": "^3.2.0"
  }
}
